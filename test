
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local starterGui = player:WaitForChild("PlayerGui")

local totalSeconds = 5 * 60 
local titleText = "Geçici olarak devre dışı"
local subtitlePrefix = "Kalan süre: " -- örn. "Kalan süre: 4:59"


local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TemporaryDisabledGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = starterGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.6, 0, 0.18, 0)
frame.Position = UDim2.new(0.2, 0, 0.41, 0)
frame.AnchorPoint = Vector2.new(0, 0)
frame.BackgroundTransparency = 0.15
frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
frame.BorderSizePixel = 0
frame.Parent = screenGui
frame.Name = "MainFrame"
frame.ZIndex = 2
frame.ClipsDescendants = true
frame.Rotation = 0
frame.Visible = true
frame.Size = UDim2.new(0.6, 0, 0.18, 0)
frame.Position = UDim2.new(0.2, 0, 0.41, 0)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -20, 0.6, -10)
title.Position = UDim2.new(0, 10, 0, 8)
title.BackgroundTransparency = 1
title.Text = titleText
title.Font = Enum.Font.GothamBold
title.TextSize = 30
title.TextColor3 = Color3.fromRGB(255,255,255)
title.TextScaled = false
title.TextWrapped = true
title.Parent = frame
title.TextXAlignment = Enum.TextXAlignment.Center
title.TextYAlignment = Enum.TextYAlignment.Center

local subtitle = Instance.new("TextLabel")
subtitle.Size = UDim2.new(1, -20, 0.35, -8)
subtitle.Position = UDim2.new(0, 10, 0.6, 4)
subtitle.BackgroundTransparency = 1
subtitle.Text = subtitlePrefix .. "5:00"
subtitle.Font = Enum.Font.Gotham
subtitle.TextSize = 20
subtitle.TextColor3 = Color3.fromRGB(220,220,220)
subtitle.TextScaled = false
subtitle.TextWrapped = true
subtitle.Parent = frame
subtitle.TextXAlignment = Enum.TextXAlignment.Center
subtitle.TextYAlignment = Enum.TextYAlignment.Center


local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0, 8)
uicorner.Parent = frame


spawn(function()
    local remaining = totalSeconds
    while remaining > 0 do
        local minutes = math.floor(remaining / 60)
        local seconds = remaining % 60
        local s = tostring(seconds)
        if seconds < 10 then s = "0" .. s end
        subtitle.Text = subtitlePrefix .. minutes .. ":" .. s
        remaining = remaining - 1
        wait(1)
    end

 
    if screenGui and screenGui.Parent then
        screenGui:Destroy()
    end
end)
